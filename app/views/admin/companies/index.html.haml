%h1= t Company.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Company.human_attribute_name(:name)
      %th= Company.human_attribute_name(:title)
      %th= Company.human_attribute_name(:email)
      %th= Company.human_attribute_name(:phone)
      %th= Company.human_attribute_name(:address)
      %th= Company.human_attribute_name(:url)
      %th= Company.human_attribute_name(:seo_title)
      %th= Company.human_attribute_name(:seo_description)
      %th= Company.human_attribute_name(:seo_keywords)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @companies.each do |company|
      %tr
        %td= company.name
        %td= company.title
        %td= company.email
        %td= company.phone
        %td= company.address
        %td= company.url
        %td= company.seo_title
        %td= company.seo_description
        %td= company.seo_keywords
        %td= render 'admin/shared/index_buttons', resource: company
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_company_path, class: 'btn btn-primary btn-sm'
